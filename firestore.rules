rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users: each user can read/write their own profile
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
      
      // Mini-games progress: users can read/write their own progress
      match /miniGamesProgress/{gameId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }

    // Students: XP, streaks, badges
    match /students/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Leaderboard: all students can read, but only self can write
    match /leaderboard/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Mini-games leaderboards: all students can read, users can write their own scores
    match /leaderboards/miniGames/{gameId}/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Play challenges leaderboards: all students can read, users can write their own scores
    match /leaderboards/playChallenges/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Drive mappings: students can read, only teachers/admins can write
    match /driveMappings/{gradeKey} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.role in ['teacher','admin'];
    }

    // Activity logs: students log their own events, teachers/admins can read all
    match /activity/{day}/{eventId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && request.auth.token.role in ['teacher','admin'];
    }
    
    // Add explicit rules for mini-games progress collection
    match /users/{uid}/miniGamesProgress/{gameId} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    
    // Add explicit rules for leaderboards collection
    match /leaderboards/{category}/{gameId}/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }
  }
}